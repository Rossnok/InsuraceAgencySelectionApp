<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".article_info.ArticleView">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/articleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este es el titulo de un articulo"
            android:fontFamily="@font/roboto_black"
            android:textSize="19sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/articleAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sergio Rosas Mendez"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_weight="1"
            android:layout_marginBottom="8dp" >

            <TextView
                android:id="@+id/articleContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023Publicado el dia 10 de diciembre del 2023"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textAlignment="viewStart"
                android:elegantTextHeight="true"
                android:includeFontPadding="true"
                android:layout_marginBottom="8dp"
                android:paddingLeft="4dp"
                android:textColor="@color/cardview_dark_background"/>

        </ScrollView>
        <TextView
            android:id="@+id/articleDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/12/1995"
            android:textAlignment="textEnd"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>